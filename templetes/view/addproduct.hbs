<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <style>
      body{ margin: 0px; }

    </style>
    {{! ******************** Bootstrap Link **************************** }}
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />

  </head>
  <body style="background-color: rgb(225, 142, 156);">
    <section class="h-100 gradient-form" style="">
      <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-xl-10">
            <div
              style="background-color:rgb(225, 142, 156) ;"
              class="rounded-3"
            >

              <div class="p-md-5 mx-md-4">
                <div>
                      <h3 class="text-center">Create-Product</h3>

                    </div>
                    <br>
                     <span class="text-center">
                     {{msg}}
                     </span>
               
                    <form style="width:300px;margin-left:250px"action="/addedproduct" method="post" enctype="multipart/form-data">
                     
                      <span class="text-success lead">{{rgmsg}}</span>
                       <input type="hidden" name="id" id="id" value="{{pdata._id}}">
                      <div class="form-outline mb-4">
                        <input
                          type="text"
                          id="pname"
                          name="pname"
                          class="form-control lead"
                          placeholder="Productname"
                          value="{{pdata.pname}}"
                        />
                       
                      </div>

                      <div class="form-outline mb-4">
                        <input
                          type="text"
                          id="pid"
                          name="pid"
                          class="form-control lead"
                          placeholder="Product-ID(set only number)"
                          value="{{pdata.pid}}"
                        />
                       
                      </div>

                      <div class="form-outline mb-4">
                        <input
                          type="text"
                          name="qty"
                          id="qty"
                          class="form-control lead"
                          placeholder="Product QTY(number of)"
                          value="{{pdata.qty}}"
                        />
                       
                      </div>

                      <div class="form-outline mb-4">
                        <input
                          type="text"
                          id="price"
                          name="price"
                          class="form-control lead"
                          placeholder="Price(set price)*"
                          value="{{pdata.price}}"
                        />
                       
                      </div>
                      <div class="form-outline mb-4">
                        <input
                          type="file"
                          id="img"
                          name="file"
                          class="form-control lead"
                          placeholder="Price(set price)*"
                        
                        />
                         <label
                          class="form-label"
                          for="form2Example22"
                        >AddProduct Image</label>
                       
                      </div>

                      <div class="text-center pt-1 mb-5 pb-1">
                        <button
                          type="submit"
                          class="btn btn-success"
                        >CreateProduct</button>
                        <button
                          type="reset"
                          class="btn btn-danger"
                        >Reset</button>
                      </div>

                    
                      
                   

                    </form>

            </div>
          </div>
        </div>
      </div>
    </section>

  </body>
</html>